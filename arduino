#include <Servo.h>

const int triggerPin = 8;
const int echoPin = 7;
Servo myServo;

void setup() {

  Serial.begin(9600);

  pinMode(triggerPin, OUTPUT);

  pinMode(echoPin, INPUT);

  myServo.attach(3);
}

void loop() {
  long duration;
  int distance;

  digitalWrite(triggerPin, LOW);
  delayMicroseconds(2);

  digitalWrite(triggerPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(triggerPin, LOW);

  duration = pulseIn(echoPin, HIGH);

  distance = duration * 0.034 / 2;

  Serial.print("Distance: ");
  Serial.print(distance);
  Serial.println(" cm");

  if (distance > 10) {
    myServo.write(90);
  } else {
    myServo.write(0);
  }

  delay(1000);
}